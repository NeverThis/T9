<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="PulseButtonStyle" 
           TargetType="Button">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Grid>
                        <!-- Glowing border -->
                        <Border x:Name="GlowBorder"
                                CornerRadius="6"
                                Background="Transparent"
                                BorderBrush="Ivory"
                                BorderThickness="2"
                                Opacity="0"
                                Margin="-3"/>

                        <!-- Main button content -->
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              RecognizesAccessKey="True"/>
                        </Border>
                    </Grid>

                    <ControlTemplate.Triggers>
                        <DataTrigger Binding="{Binding ModificationsMade}" 
                                     Value="True">
                            <DataTrigger.EnterActions>
                                <BeginStoryboard x:Name="PulseStoryboard">
                                    <Storyboard RepeatBehavior="Forever" 
                                                AutoReverse="True">
                                        <DoubleAnimation Storyboard.TargetName="GlowBorder"
                                                         Storyboard.TargetProperty="Opacity"
                                                         From="0" 
                                                         To="0.5"
                                                         Duration="0:0:0.5"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </DataTrigger.EnterActions>
                            <DataTrigger.ExitActions>
                                <StopStoryboard BeginStoryboardName="PulseStoryboard"/>
                            </DataTrigger.ExitActions>
                        </DataTrigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>