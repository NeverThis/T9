<UserControl x:Class="UI.Views.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UI.Views"
             xmlns:viewModel="clr-namespace:UI.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    
    <UserControl.DataContext>
        <viewModel:SettingsViewModel />
    </UserControl.DataContext>

    <StackPanel Margin="20" Orientation="Vertical">
        <!-- File types -->
        <TextBlock Text="Allowed File Types:" 
                   Margin="0,0,0,5"
                   Foreground="Ivory"
                   FontSize="14"/>

        <ComboBox ItemsSource="{Binding AllowedFileTypes}" 
                  SelectedItem="{Binding SelectedFileType}" 
                  Width="150"
                  HorizontalAlignment="Left"
                  Margin="0,0,0,10"
                  IsEnabled="False"/>

        <TextBlock Text="Select a File Path:" 
                   Margin="0,0,0,5" 
                   Foreground="Ivory"
                   FontSize="14"/>

        <!-- Actual path -->
        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
            <TextBox Text="{Binding FilePath, UpdateSourceTrigger=PropertyChanged}" 
                     Width="300" 
                     Margin="0,0,10,0"
                     IsEnabled="False"/>
            <Button Content="Browse..." 
                    Command="{Binding BrowseCommand}" 
                    Width="100"/>
        </StackPanel>
    </StackPanel>
</UserControl>
