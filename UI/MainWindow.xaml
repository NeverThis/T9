<Window x:Class="UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UI"
        xmlns:viewModel="clr-namespace:UI.ViewModels"
        xmlns:views="clr-namespace:UI.Views"
        mc:Ignorable="d"
        Height="500" 
        Width="800"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="Transparent"
        AllowsTransparency="True">

    <Window.DataContext>
        <viewModel:MainViewModel/>
    </Window.DataContext>

    <Border Background="#2C3539"
            CornerRadius="25">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="60"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <views:LoadingView Grid.Row="0"
                               Grid.Column="2"
                               DataContext="{Binding LoadingVM}"/>

            <!-- The application name -->
            <TextBlock Text="T9"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center"
                   Foreground="Ivory"
                   FontSize="26"/>

            <!-- The menu -->
            <StackPanel Grid.Row="1">
                <RadioButton Content="Texting"
                             Height="50"
                             Foreground="Ivory"
                             FontSize="16"
                             Style="{StaticResource MenuButton}"/>  

                <RadioButton Content="Language Model"
                             Height="50"
                             Foreground="Ivory"
                             FontSize="16"
                             Style="{StaticResource MenuButton}"/>

                <RadioButton Content="Settings"
                             Height="50"
                             Foreground="Ivory"
                             FontSize="16"
                             IsChecked="True"
                             Style="{StaticResource MenuButton}"/>
            </StackPanel>

            <ContentControl Grid.Row="1" 
                            Grid.Column="1"
                            Margin="10"
                            Content="{Binding CurrentView}">
            </ContentControl>
        </Grid>
    </Border>
</Window>
